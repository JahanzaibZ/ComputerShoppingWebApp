@page
@model ComputerShoppingWebApp.Pages.ComputerListModel
@{
    ViewData["Title"] = "Computers List";
}

<div class="row">
    @foreach (var computer in Model.computers)
    {
        <div class="col-lg-3 col-md-6 col-sm-12" style="margin-bottom:70px;">
            <img src="@computer.computerImage" alt="@computer.computerBrand @computer.computerModel" style="width:90%; height:75%; display:block; margin:0 auto;" />
            <span style="display:block; text-align:center; font-size:20px; color:black">@computer.computerBrand @computer.computerModel</span>
            <span style="display:block; text-align:center; font-size:16px; color:grey">Rs. @computer.computerPrice</span>
            <span style="display:block; width:90%; margin:0 auto"><input style="display:inline; width:50%; text-align:center" type="number" name="quantity" value="" placeholder="0" /><button style="display:inline; width:50%">Add to cart</button></span>
        </div>
    }
</div>